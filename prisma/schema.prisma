generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Client {
    id              Int         @id @default(autoincrement())
    address         String?     @db.Text
    currency        String
    email           String?
    name            String      @unique
    projects        Project[]
}

model Project {
    id              Int         @id @default(autoincrement())
    name            String
    billing         String
    status          String
    client          Client      @relation(fields: [clientId], references: [id])
    clientId        Int
}